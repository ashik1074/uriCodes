#include <bits/stdc++.h>
using namespace std;

int main(){

    double A,B,C,perimetro,area;

    scanf("%lf %lf %lf",&A,&B,&C);
    if(A+B>C && B+C>A && C+A>B){
        perimetro = A+B+C;
        printf("Perimetro = %.1lf\n",perimetro);
    }

    else{
        area = ((A+B)/2)*C;
        printf("Area = %.1lf\n",area);

    }


    return 0;


}
